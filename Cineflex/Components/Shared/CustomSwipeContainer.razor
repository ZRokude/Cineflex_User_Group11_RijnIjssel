@typeparam TData
<MudSwipeArea Style="width:100%;">
    <MudStack Style="@Style" Row="true" Justify="Justify.SpaceEvenly">
        <CascadingValue Value="this" IsFixed="true">
            @if (Items == null)
            {
                @ChildContent
            }
            else
            {
                foreach (var item in Items)
                {
                    @if (ItemTemplate != null)
                    {
                        @ItemTemplate(item)
                        ;
                    }
                }
            }
        </CascadingValue>
    </MudStack>
</MudSwipeArea>
    




