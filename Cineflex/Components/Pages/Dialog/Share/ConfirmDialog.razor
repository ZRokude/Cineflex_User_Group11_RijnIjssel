<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@Localizer["ConfirmDialog_Text"]</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Confirm">@Localizer["ConfirmDialog_Confirm"]</MudButton>
        <MudButton Color="Color.Secondary" Variant="Variant.Outlined" OnClick="Cancel">@Localizer["ConfirmDialog_Cancel"]</MudButton>
    </DialogActions>
</MudDialog>

