@page "/forgotPassword"
@using Cinelexx.Services.Email

@using Cineflex.Services.Email
@using System.ComponentModel.DataAnnotations
@inject IJSRuntime JS
@inject NavigationManager NavigationManager
@* @inject RentDbContext DbContext *@ 
@inject ISnackbar Snackbar

@rendermode InteractiveServer
<PageTitle>Wachtwoord vergeten</PageTitle>

<MudPaper Class="lamp-container" Elevation="0">
    <!-- Left Lamp -->
    <div class="lamp-wrapper left">
        <div class="lamp @lampClass"></div>
        <div class="lamp-light @(_fadeOut ? "active" : "")"></div>
    </div>

    <!-- Right Lamp -->
    <div class="lamp-wrapper right">
        <div class="lamp @lampClass"></div>
        <div class="lamp-light @(_fadeOut ? "active" : "")"></div>
    </div>
</MudPaper>
 


<!-- Main container -->
<div class="@($"color-transition {backgroundClass}")"
     style="position: fixed; top: 0; left: 0; height: 100vh; width: 100vw; display: flex; justify-content: center; align-items: center;">
    
     <MudCard Style="width: 450px; background-color:#272727; padding:15px; border-radius:15px" Elevation="25" Outlined="_fadeOut">
        <!-- Logo -->
        <div style="display: flex; justify-content: center; align-items: center; padding: 20px;">
            <img src="Picture/Logo_Cineflex.png" style="height: 100px; width: 125px;" alt="Cineflex Logo" />
        </div>

        <MudCardContent>
            <MudForm @ref="form" Model="model">
                <MudText Typo="Typo.body1" Color="Color.Primary">
                    Voer je Email in om een inlog-code te ontvangen via de mail om je wachtwoord te hermaken.
                </MudText>

                <!-- Email Input Section -->
                <MudText Typo="Typo.body1" Color="Color.Primary" Class="mt-3">Email:</MudText>
                <MudTextField T="string"
                              @bind-Value="model.Email"
                              For="@(() => model.Email)"
                              Placeholder="naam@gmail.com"
                              Disabled="_SendCode"
                              Class="my-2"
                              InputType="InputType.Email"
                              FullWidth="true"
                              Variant="Variant.Filled"
                              Immediate="true"
                              DebounceInterval="300"
                              Error="@(!string.IsNullOrEmpty(emailError))"
                              ErrorText="@emailError" />

                <!-- Email Format Helper -->
                @if (!string.IsNullOrEmpty(model.Email) && !_SendCode)
                {
                    <div class="email-validation mt-2">
                        <MudText Typo="Typo.caption" Color="@(IsValidEmailFormat() ? Color.Success : Color.Warning)">
                            <MudIcon Icon="@(IsValidEmailFormat() ? Icons.Material.Filled.Check : Icons.Material.Filled.Warning)" Size="Size.Small" />
                            @(IsValidEmailFormat() ? "Geldig e-mailadres format" : "Controleer e-mailadres format")
                        </MudText>
                    </div>
                }

                <!-- Back to Login Link -->
                <MudText Typo="Typo.body2" Color="Color.Primary" Class="mt-3">
                    Herinner je je wachtwoord weer?
                    <MudLink @onclick="OnReturnToLoginClick" Color="Color.Primary" Style="cursor: pointer;">
                        Terug naar login
                    </MudLink>
                </MudText>

                <!-- Code Input Section -->
                @if (_SendCode)
                {
                    <div class="code-section mt-4">
                        <MudText Typo="Typo.body1" Color="Color.Primary" Class="mt-4">
                            Voer hier uw 6-cijferige code in:
                        </MudText>

                        <MudTextField T="string"
                                      @bind-Value="model.ResetCode"
                                      For="@(() => model.ResetCode)"
                                      Placeholder="123456"
                                      Variant="Variant.Filled"
                                      InputType="InputType.Text"
                                      FullWidth="true"
                                      Class="my-2"
                                      MaxLength="6"
                                      Error="@(!string.IsNullOrEmpty(codeError))"
                                      ErrorText="@codeError" />

                        <!-- Code Format Helper -->
                        @if (!string.IsNullOrEmpty(model.ResetCode))
                        {
                            <div class="code-validation mt-2">
                                <MudText Typo="Typo.caption" Color="@(IsValidCodeFormat() ? Color.Success : Color.Warning)">
                                    <MudIcon Icon="@(IsValidCodeFormat() ? Icons.Material.Filled.Check : Icons.Material.Filled.Warning)" Size="Size.Small" />
                                    @(IsValidCodeFormat() ? "Geldige code format" : "Code moet 6 cijfers bevatten")
                                </MudText>
                            </div>
                        }

                    </div>
                }
                <!-- Action Buttons -->
                @if (!_SendCode)
                {
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               OnClick="SendMail"
                               Class="@(_fadeOut ? "fade-out" : "fade-in")"
                               FullWidth="true"
                               Disabled="@_SendCode"
                               StartIcon="@(_SendCode ? null : Icons.Material.Filled.Email)">
                        @if (_isLoading)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                            <span class="ml-2">Verzenden...</span>
                        }
                        else
                        {
                            <span>Verstuur Mail</span>
                        }
                    </MudButton>
                }


                @if (_SendCode)
                {
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               OnClick="VerifyCode"
                               FullWidth="true"
                               Class="mt-4"
                               Disabled="@(!IsCodeValid() || _isVerifying)"
                               StartIcon="@(_isVerifying ? null : Icons.Material.Filled.VpnKey)">
                        @if (_isVerifying)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                            <span class="ml-2">Verifiëren...</span>
                        }
                        else
                        {
                            <span>Doorgaan</span>
                        }
                    </MudButton>
                }
            </MudForm>
        </MudCardContent>
    </MudCard>
</div>

<style>
    .color-transition {
        transition: background-color 1s ease;
    }

    .start-color {
        background-color: #232323;
    }

    .end-color {
        background-color: #411102;
    }

    .fade-in {
        opacity: 1;
        transition: opacity 250ms ease-in;
    }

    .fade-out {
        opacity: 0;
        transition: opacity 250ms ease-in;
    }

    /* Uitgeschakelde inputstijl */
    input:disabled {
        background-color: #333 !important;
        color: #aaa !important;
        cursor: not-allowed;
        opacity: 1 !important;
    }

    /* Stijl voor validatievlakken */
    .email-validation, .code-validation {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 5px 10px;
        border-radius: 5px;
    }

        .email-validation .mud-text, .code-validation .mud-text {
            display: flex;
            align-items: center;
            gap: 5px;
        }

    .code-section {
        background-color: rgba(255, 255, 255, 0.02);
        padding: 15px;
        border-radius: 8px;
        border: 1px solid rgba(245, 175, 0, 0.2);
    }

    .activation-section {
        background-color: rgba(255, 255, 255, 0.02);
        padding: 15px;
        border-radius: 8px;
    }

    .lamp-container {
        position: relative;
        height: 100vh;
        background: #100f0f;
        overflow: hidden;
        display: flex;
        justify-content: space-around; /* left & right */
        align-items: flex-end;
        padding: 0 50px;
    }

    /* Wrapper for alignment */
    .lamp-wrapper {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: flex-end;
    }

    /* Lamp Base */
    .lamp {
        width: 40px;
        height: 80px;
        background: #121111;
        border-radius: 10px;
        z-index: 2;
    }

    .lamp-hidden {
        transition: transform 0.3s ease-in-out;
        transform: translateY(100%);
    }

    .lamp-visible {
        transition: transform 0.3s ease-in-out;
        transform: translateY(0);
    }

    /* Base lamp light styles - initially invisible */
    .lamp-light {
        opacity: 0;
        transition: opacity 2s ease-in-out;
    }

        /* Active state - slowly fade in */
        .lamp-light.active {
            opacity: 1;
        }

    /* Left Lamp Glow — upright */
    .lamp-wrapper.left .lamp-light {
        position: absolute;
        bottom: 70px;
        left: 50%;
        transform: translateX(-50%) rotateY(180deg) rotateX(180deg); /* Added rotateX(180deg) */
        width: 200px;
        height: 300px;
        background: linear-gradient(to top, rgba(255,255,200,0.2) 0%, rgba(255,255,200,0.6) 50%, rgba(255,255,200,0) 100%);
        clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        filter: blur(40px);
        z-index: 1;
    }

    /* Right Lamp Glow — mirrored horizontally */
    .lamp-wrapper.right .lamp-light {
        position: absolute;
        bottom: 350px;
        left: 50%;
        transform: translateX(-50%) rotateY(180deg) rotateX(180deg); /* Added rotateX(180deg) */
        width: 200px;
        height: 300px;
        background: linear-gradient(to top, rgba(255,255,200,0.2) 0%, rgba(255,255,200,0.6) 50%, rgba(255,255,200,0) 100%);
        clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        filter: blur(40px);
        z-index: 1;
        transform-origin: center bottom;
    }
    /* Active state - slowly fade in */
    .lamp-light.active {
        opacity: 1;
    }



</style>

